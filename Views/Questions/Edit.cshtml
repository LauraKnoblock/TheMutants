@{
}
@using TheMutants.Models
@model List<Question>

<h1>@ViewBag.title</h1>

<form method="post" action="/questions/edit">
    <div class="form-group">
        <label for="name">Name</label>
        <input name="name" type="text" value="@ViewBag.questionToEdit.Name" />
    </div>
    <div class="form-group">
        <label for="answer">Answer</label>
        <input name="description" type="text" value="@ViewBag.questionToEdit.Answer"/>
        <input type="hidden" value="@ViewBag.eventToEdit.Id" name="eventId" />
    </div>
    <input type="submit" value="Edit Question" />
</form>
