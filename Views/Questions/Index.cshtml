@{
}
@using TheMutants.Models
@model List<Question>

<h1>Trivia Questions</h1>

<p>
    <a asp-controller="Questions" asp-action="Add">Add Question</a>
    <a asp-controller="Questions" asp-action="Delete">Delete Question</a>

</p>

@if(Model.Count == 0)
{
    <p>No Questions yet!</p>
}
else
{
    <table>
        <tr>
            <th>
                Id
            </th>
            <th>
                Category
            </th>
            <th>
                Question
            </th>
            <th>
                Answer
            </th>
            
        </tr>
        @foreach (var q in Model)
        {
            <tr>
                <td>@q.Id</td>
                <td>@q.Category</td>
                <td>@q.Name</td>
                <td>@q.Answer</td>
                <td><a asp-controller="Questions" asp-action="Edit" asp-route-id="@q.Id">Edit Question</a></td>


            </tr>
        }
    </table>
    
}

