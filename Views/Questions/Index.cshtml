@{
}
<h1>Trivia Questions</h1>

<p>
    <a asp-controller="Questions" asp-action="Add">Add Question</a>
</p>

@if(ViewBag.questions.Count == 0)
{
    <p>No Questions yet!</p>
}
else
{
    <table>
        <tr>
            <th>
                Question
            </th>
            <th>
                Answer
            </th>
        </tr>
        @foreach (KeyValuePair<string, string> q in ViewBag.questions)
        {
            <tr>
                <td>@q.Key</td>
                <td>@q.Value</td>
            </tr>
        }
    </table>
    
}

