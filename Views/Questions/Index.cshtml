@{
}
<h1>Trivia Questions</h1>

<p>
    <a asp-controller="Questions" asp-action="Add">Add Question</a>
</p>

@if(ViewBag.questions.Count == 0)
{
    <p>No Questions yet!</p>
}
<ul>
    @foreach(string q in ViewBag.questions)
    {
        <li>@q</li>
    }
</ul>
